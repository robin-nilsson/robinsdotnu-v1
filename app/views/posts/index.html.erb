<div class="row">
	<div class="col-lg-6 col-lg-offset-3 text-center">
		<% @posts.each do |post| %>
			<div class="post-wrapper">
				<h2 class="post-title"><%= link_to post.title, post %></h2>
				<p class="post-date"><%= post.created_at.strftime("%B %d, %Y") %></p>
			</div>
		<% end %>
	</div>
</div>